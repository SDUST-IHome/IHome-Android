<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_page_white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include layout="@layout/subpage_title_bar"
            android:id="@+id/include" />

        <ScrollView
            android:id="@+id/widget54"
            android:background="@color/color_page_white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@+id/include">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/regist_text_user"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/ic_regedit_user"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7px"
                    android:singleLine="true"
                    android:hint="用户名"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/regist_text_name"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/ic_regedit_name"
                    android:layout_marginTop="7px"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:hint="姓名"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/regist_text_phone"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/ic_regedit_phone"
                    android:layout_marginTop="7px"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:hint="手机号"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/regist_text_pwd"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/ic_regedit_pwd"
                    android:layout_marginTop="7px"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="密码"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/regist_text_pwdenter"
                    android:background="@color/color_btn_white"
                    android:drawableLeft="@drawable/ic_regedit_pwd"
                    android:layout_marginTop="7px"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="确认密码"
                    android:textColor="#000"/>
                <Button
                    android:id="@+id/regist_btn_regist"
                    android:background="@drawable/selector_ok_button"
                    android:textColor="@color/color_btn_text"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="创建账户"
                    android:layout_marginTop="16px"

                     />
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>